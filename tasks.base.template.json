{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "üèóÔ∏è Build firmware (solo app)",
        "type": "shell",
        "command": "__SHELL__",
        "args": [
          "-Command",
          "& '__EXPORT_SCRIPT__'; idf.py build"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "üí£ Flash completo (firmware + LittleFS)",
        "type": "shell",
        "command": "__SHELL__",
        "args": [
          "-Command",
          "$env:LFS_BUILD='1'; & '__EXPORT_SCRIPT__'; idf.py -p __PORT__ flash"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": []
      },
      {
        "label": "üñ•Ô∏è Monitor serie",
        "type": "shell",
        "command": "__SHELL__",
        "args": [
          "-Command",
          "& '__EXPORT_SCRIPT__'; idf.py -p __PORT__ monitor"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": []
      },
      {
        "label": "üßº Borrado completo de la flash",
        "type": "shell",
        "command": "__SHELL__",
        "args": [
          "-Command",
          "& '__EXPORT_SCRIPT__'; idf.py -p __PORT__ erase-flash"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": []
      }
    ]
  }
  